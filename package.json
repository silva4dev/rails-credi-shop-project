  "engines": {
    "node": "21.x"
  },
  "scripts": {
    "start": "./bin/dev",
    "fix": "pnpm run eslint:fix; pnpm run md:fix; pnpm run json:fix; pnpm run erb:fix; pnpm run ruby:fix",
    "lint": "pnpm run style:lint; pnpm run eslint:lint; pnpm run md:lint; pnpm run json:lint; pnpm run erb:lint; pnpm run ruby:lint",
    "ruby:fix": "bundle exec rubocop -A",
    "ruby:lint": "bundle exec rubocop",
    "style:fix": "prettier --write '**/**/*.{scss,css}'; stylelint '**/**/*.{scss,css}' --fix --allow-empty-input",
    "style:lint": "stylelint '**/**/*.{scss,css}' --allow-empty-input",
    "erb:fix": "bundle exec erblint -a --lint-all; bundle exec erb-format app/views/**/*.html.erb --write",
    "erb:lint": "bundle exec erblint --lint-all",
    "md:fix": "prettier --write '**/**/*.md'",
    "md:lint": "prettier --check '**/**/*.md'",
    "json:fix": "prettier --write '*.json'; prettier --write '**/**/*.json'",
    "json:lint": "prettier --check '*.json'; prettier --check '**/**/*.json'",
    "eslint:fix": "prettier --write '**/**/*.{js,ts,jsx,tsx}'; eslint --fix",
    "eslint:lint": "prettier --check '**/**/*.{js,ts,jsx,tsx}'; eslint",
    "prepare": "husky install",
    "convert-to-lf": "find . -type f ! -path './node_modules/*' -exec dos2unix {} \\;"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "chart.js": "^4.4.2",
    "imask": "^7.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "4.4.0",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "19.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "git-commit-msg-linter": "^2.3.11",
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "stylelint": "^16.2.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^36.0.0",
    "ts-node": "^10.9.2",
    "typescript": "4.0.5",
    "vite": "^5.2.8",
    "vite-plugin-full-reload": "^1.1.0",
    "vite-plugin-ruby": "^5.0.0",
    "vite-plugin-sass": "^0.1.0",
    "vite-plugin-stimulus-hmr": "^3.0.0"
  }
}
